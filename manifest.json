{
  "manifest_version": 3,
  "name": "Swiper Bear",
  "version": "1.23",
  "description": "Switch tabs with a cute preview using one shortcutâ€”like Cmd+Tab for your browser.",
  "icons": {
    "16": "icons/icon-16x16.png",
    "32": "icons/icon-32x32.png",
    "48": "icons/icon-48x48.png",
    "128": "icons/icon-128x128.png"
  },
  "action": {
    "default_icon": "icons/icon-48x48.png",
    "default_title": "Tab Switcher",
    "default_popup": "pages/popup.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "commands": {
    "open_switcher": {
      "suggested_key": {
        "default": "Ctrl+Q",
        "mac": "MacCtrl+Q"
      },
      "description": "Open switcher popup / Next"
    }
  }
}